VERSION = 1.0.0

SOURCE = $(wildcard ./src/*.c)
OBJ = $(patsubst %.c, %.o, $(SOURCE))
INCLUDES = -I./h

LIBS = -ldylib
LIB_PATH = -L./lib

DEBUG = -D_MACRO
TARGET = app
CC = gcc

$(TARGET): $(OBJ)	
	$(CC) $(OBJ) $(INCLUDES) $(LIB_PATH) $(LIBS) -o $(TARGET).$(VERSION)

%.o: %.c
	$(CC) $(INCLUDES) $(DEBUG) -c $< -o $@

.PHONY: clean
clean:
	rm -rf $(OBJ) $(TARGET)
